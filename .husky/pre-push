#!/usr/bin/env node

const { execSync } = require("child_process");

try {
  console.log("ğŸ‘‰ Running lint (frontend)...");
  execSync("cd frontend && npm run lint", { stdio: "inherit" });
  console.log("ğŸ‘‰ Running lhci (frontend)...");
  execSync("cd frontend && npm run lhci autorun", { stdio: "inherit" });
  console.log("âœ… All frontend checks passed.");
} catch (err) {
  console.error("âŒ Checks failed, push aborted.");
  process.exit(1);
}
